{
  "compileOnSave": false,
  "compilerOptions": {
    "lib": [
      "es2015",
      "dom",
    ],
    "declaration": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./build/cjs",
    "sourceMap": true,
    "strict": true,
    "target": "ES6",
    "types": [
      "reflect-metadata",
      "node"
    ]
  },
  "include": [
    "bin/*.ts",
    "lib/*.ts",
    "tests/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ],
  "typeRoots": [
    "../node_modules/@types/index.d.ts"
  ]
}